<?xml version='1.0' encoding='utf-8'?>
<widget id="io.akira.pos" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="BluetoothPrinter">
        <param name="android-package" value="com.ru.cordova.printer.bluetooth.BluetoothPrinter" />
    </feature>
    <feature name="BarcodeScanner">
        <param name="android-package" value="com.phonegap.plugins.barcodescanner.BarcodeScanner" />
    </feature>
    <name>AkiraPos</name>
    <description>
        Aplikasi kasir Akira Reflexology berbasis android
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <splash density="land-hdpi" src="res/screen/android/screen-hdpi-landscape-akira.png" />
    <splash density="land-ldpi" src="res/screen/android/screen-ldpi-landscape-akira.png" />
    <splash density="land-mdpi" src="res/screen/android/screen-mdpi-landscape-akira.png" />
    <splash density="land-xhdpi" src="res/screen/android/screen-xhdpi-landscape-akira.png" />
    <splash density="port-hdpi" src="res/screen/android/screen-hdpi-portrait-akira.png" />
    <splash density="port-ldpi" src="res/screen/android/screen-ldpi-portrait-akira.png" />
    <splash density="port-mdpi" src="res/screen/android/screen-mdpi-portrait-akira.png" />
    <splash density="port-xhdpi" src="res/screen/android/screen-xhdpi-portrait-akira.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
</widget>
